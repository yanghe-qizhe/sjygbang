@{
    ViewBag.Title = "罐号";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<script type="text/javascript">
    $(function () {
        $("#FULLNAME").keyup(function () {
            $("#SHORTNAME").val(this.value);
        });
        InitControl();

    })

    //得到一个对象实体
    function InitControl() {
        if (!!GetQuery('KeyValue')) {
            AjaxJson("/BaseSet/MQISSupply/SetFormControl", { KeyValue: GetQuery('KeyValue') }, function (data) {
                SetWebControls(data);
            });
        }
    }
    //保存事件
    function AcceptClick() {
        if (!CheckDataValid('#form1')) {
            return false;
        }
        Loading(true, "正在提交数据...");
        window.setTimeout(function () {
            var postData = GetWebControls("#form1");
            AjaxJson("/BaseSet/MQISSupply/SubmitForm?KeyValue=" + GetQuery('KeyValue'), postData, function (data) {
                tipDialog(data.Message, 3, data.Code);
                top.frames[tabiframeId()].windowload();
                closeDialog();
            });
        }, 200);
    }
</script>
<form id="form1" style="margin: 1px">
<div id="message" style="display: none">
</div>
<table class="form">
    <tr>
        <th class="formTitle">
            内码：
        </th>
        <td class="formValue">
            <input id="CODE" type="text" class="txt required" datacol="yes" err="内码" checkexpession="NotNull" />
        </td>
    </tr>
    <tr>
        <th class="formTitle">
            名称：
        </th>
        <td class="formValue">
            <input id="FULLNAME" type="text" class="txt required" datacol="yes" err="名称" checkexpession="NotNull" />
        </td>
    </tr>
    <tr>
        <th class="formTitle">
            简称：
        </th>
        <td class="formValue">
            <input id="SHORTNAME" type="text" class="txt required" datacol="yes" err="简称" checkexpession="NotNull" />
        </td>
    </tr>
    <tr>
        <th class="formTitle">
            选项：
        </th>
        <td class="formValue">
            <span class="item">
                <input type="checkbox" name="checkbox" checked="checked" id="ISUSE" />
                <label for="ISUSE">
                    有效</label>
            </span>
        </td>
    </tr>
    <tr>
        <th class="formTitle">
            描述：
        </th>
        <td class="formValue">
            <textarea id="MEMO" name="Description" maxlength="200" class="txtArea" rows="5"></textarea>
        </td>
    </tr>
</table>
</form>
