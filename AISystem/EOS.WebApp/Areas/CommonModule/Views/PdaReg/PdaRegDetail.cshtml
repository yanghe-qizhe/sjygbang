@{
    ViewBag.Title = "厂内工序任务单》详细";
    Layout = "~/Views/Shared/_LayoutForm.cshtml";
}
<script type="text/javascript">
    var KeyValue = GetQuery('KeyValue'); //主键
    $(function () {
        InitControl();
        InputToName();
    })
    //得到一个对象实体
    function InitControl() {
        if (!!KeyValue) {
            AjaxJson("/CommonModule/PdaReg/SetFormControl", { KeyValue: KeyValue }, function (data) {
                SetWebControls(data);
            });
        }
    }
    function InputToName() {
        var ISUSE = $("#ISUSE").val();
        var ISDEL = $("#ISDEL").val();
        if (ISUSE == '1') {
            $("#ISUSE").val("启用");
            $("#ISDEL").val("已删除");
        }
        else {
            $("#ISUSE").val("未启用");
            $("#ISDEL").val("正常");
        }
    } 

</script>
<form id="form1" style="margin: 1px">
<div class="tools_bar" style="margin-top: 1px; margin-bottom: 1px;">
    <a id="lr-replace" class="tools_btn" title="刷新当前(Ctrl+Q)" onclick="Replace()"><span>
        <b style='background: url(@Url.Content("~/Content/Images/Icon16/arrow_refresh.png")) no-repeat 50% 4px;'>
            刷新</b></span></a> <a title="关闭当前窗口(Esc)" onclick="ThisCloseTab()" class="tools_btn">
                <span><b style="background: url(@Url.Content("~/Content/Images/Icon16/back.png")) 50% 4px no-repeat;">
                    离开</b></span></a>
</div>
<div class="bd" style="border-bottom: none; margin: 2px;">
    <div class="tipstitle_title settingtable bold bd todayInfoPanelTab rightPanelTitle_normal">
        <div class="tab_list_top" style="position: absolute">
            <div id="Tabbasic" class="tab_list bd actived" onclick="Tabchange('basic')">
                详细信息</div>
        </div>
    </div>
</div>
<div class="ScrollBar" style="margin: 1px; overflow: hidden;">
    <!--录入信息-->
    <div id="basic" class="tabPanel">
        <table class="form">
            <tr>
                <th class="formTitle">
                    单号：
                </th>
                <td class="formValue">
                    <input id="ID" maxlength="50" type="text" class="txt" readonly="readonly" />
                </td>
                <th class="formTitle">
                    串号：
                </th>
                <td class="formValue">
                    <input id="IMEI" type="text" class="txt" readonly="readonly" />
                </td>
                <th class="formTitle">
                    手机号码：
                </th>
                <td class="formValue">
                    <input id="DEF1" type="text" class="txt" readonly="readonly" />
                </td>
            </tr>
            <tr>
                <th class="formTitle">
                    手持机编号：
                </th>
                <td class="formValue">
                    <input id="HNUM" type="text" class="txt" readonly="readonly" />
                </td>
                <th class="formTitle">
                    注册时间：
                </th>
                <td class="formValue">
                    <input id="CRETIME" type="text" class="txt" readonly="readonly" />
                </td>
                 <th class="formTitle">
                    启用状态：
                </th>
                <td class="formValue">
                    <input id="ISUSE" type="text" class="txt" readonly="readonly"/>
                </td>
            </tr>
             <tr>
                <th class="formTitle">
                    是否删除：
                </th>
                <td class="formValue">
                    <input id="ISDEL" type="text" class="txt" readonly="readonly"/>
                </td>
                <th class="formTitle">
                    备注：
                </th>
                <td class="formValue" colspan="3">
                    <input id="MEMO" type="text" class="txt" readonly="readonly" />
                </td>
            </tr>
        </table>
    </div>
</div>
</form>
