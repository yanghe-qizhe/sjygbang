@{
    ViewBag.Title = "火运发货通";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<script type="text/javascript">
    var KeyValue = GetQuery('KeyValue'); //主键
    var TASKNO = GetQuery('TASKNO'); //任务单号
    
    var ModuleId = GetQuery('ModuleId'); //菜单主键
    $(function () {
        GetGrid();
        if (!!KeyValue) {
            //主表信息
            InitControl();
            var rowindex = 1;
            //明细信息
            AjaxJson("/ExampleModule/HYBillSOF/GetOrderEntryList", { TASKNO: TASKNO }, function (data) {
                var JsonData = data.rows;
                $.each(JsonData, function (i) {
                    var rowData = JsonData[i];
                    $("#ID➩" + rowindex).val(rowData.ID);
                    $("#CARS➩" + rowindex).val(rowData.CARS);
                    $("#CARSNAME➩" + rowindex).val(rowData.CARSNAME);
                    $("#PK_SALEORDER➩" + rowindex).val(rowData.CSALEORDERID);
                    $("#CSALEORDERBID➩" + rowindex).val(rowData.CSALEORDERBID);
                    $("#VBILLCODE➩" + rowindex).val(rowData.VBILLCODE);
                    $("#CCUSTOMERID➩" + rowindex).val(rowData.CCUSTOMERID);
                    $("#CUSTNAME➩" + rowindex).val(rowData.CUSTNAME);
                    $("#CMATERIALID➩" + rowindex).val(rowData.CMATERIALID);
                    $("#CMATERIALVID➩" + rowindex).val(rowData.CMATERIALID);
                    $("#MATERIALNAME➩" + rowindex).val(rowData.MATERIALNAME);
                    $("#DBILLDATE➩" + rowindex).val(rowData.DBILLDATE);
                    $("#PK_ORG➩" + rowindex).val(rowData.PK_ORG);
                    $("#ORGNAME➩" + rowindex).val(rowData.ORGNAME);
                    $("#PK_DEPT➩" + rowindex).val(rowData.CDEPTID);
                    $("#DEPTNAME➩" + rowindex).val(rowData.DEPTNAME);
                    $("#NASTNUM➩" + rowindex).val(rowData.NASTNUM);
                    $("#YLNUM➩" + rowindex).val(rowData.YLNUM);
                    $("#AMOUNT➩" + rowindex).val(rowData.AMOUNT);
                    $("#gridTable tbody tr:eq(" + rowindex + ")").find('input').attr("datacol", "yes");
                    Conversion(rowindex);
                    rowindex++;
                    $("#gridTable tbody tr:eq(" + rowindex + ")").find('input').removeAttr('disabled');
                    $("#gridTable").find('.disabled').attr("disabled", "disabled");
                    $("#VBILLCODE➩" + rowindex).focus();
                });
            });
        }
    })
 
    //得到一个对象实体
    function InitControl() {
        if (!!KeyValue) {
            AjaxJson("/ExampleModule/HYBillSOF/SetFormControl", { KeyValue: KeyValue }, function (data) {
                SetWebControls(data);
            });
        }
    }

     

    //保存事件
    function SubmitOrderForm() {
        if (!CheckDataValid('#form1')) {
            return false;
        }
        confirmDialog('提示', '注：您确认要保存此操作吗？', function (r) {
            if (r) {
                Loading(true, "正在提交数据...");
                window.setTimeout(function () {
                    var postData = GetWebControls("#tb_HYBillSOF");
                    postData["OrderEntryJson"] = GetTableDataJson("#gridTable");
                    AjaxJson("/ExampleModule/HYBillSOF/SubmitOrderForm?KeyValue=" + KeyValue + "&ModuleId=" + ModuleId, postData, function (data) {
                        tipDialog(data.Message, 3, data.Code);
                        var tabframeid = "tabs_iframe_" + ModuleId;
                        top.frames[tabframeid].windowload();
                        ThisCloseTab();
                    });
                }, 200);
            }
        });
    }

    /*车皮明细begin=======================================*/
    //销售订单分录
    function GetGrid() {
        $("#gridTable").jqGrid({
            datatype: "local",
            height: $(window).height() - 290,
            autowidth: true,
            colModel: [
                { label: '车号[<font face="宋体">*</font>]', name: "CARSNAME", width: 150, sortable: false },
                { label: '订单编号', name: "VBILLCODE", width: 200, sortable: false },
                { label: '客户', name: "CUSNAME", width: 200, sortable: false },
                { label: '订单日期', name: "DBILLDATE", width: 130, sortable: false },
                { label: '物料', name: "MATERIALNAME", width: 100, sortable: false, align: 'center' },
                { label: '订单数量', name: "NASTNUM", width: 70, sortable: false, align: 'center' },
                { label: '余量[<font face="宋体">*</font>]', name: 'YLNUM', width: 70, sortable: false, align: 'center' },
                { label: '预提量[<font face="宋体">*</font>]', name: 'AMOUNT', width: 70, sortable: false, align: 'center' },
                { label: '销售组织', name: "ORGNAME", width: 100, sortable: false, align: 'center' },
                { label: '部门', name: "DEPTNAME", width: 100, sortable: false, align: 'center' } 
            ],
            pager: false,
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            footerrow: true,
            gridComplete: function () {
                //合计
                $(this).footerData("set", {
                    "CARSNAME": "合计",
                    "NASTNUM": "<span id='TotalNASTNUM'>0.00</span>",
                    "YLNUM": "<span id='TotalYLNUM'>0.00</span>",
                    "AMOUNT": "<span id='TotalAMOUNT'>0.00</span>"
                });
            }
        });
//        //表头合并
        $("#gridTable").jqGrid('setGroupHeaders', {
            useColSpanStyle: true,
            groupHeaders: [
              { startColumnName: 'VBILLCODE', numberOfColumns: 9, titleText: '订单信息' }
            ]
        });
        //默认添加30行 空行
        for (var i = 1; i < 31; i++) {
            var rowdata = {
                CARSNAME: '<input id="CARSNAME➩' + i + '" maxlength="20"  class="editable" type="text" style="cursor:pointer" datacol="no" err="车号" checkexpession="NotNull" /><input id="CARS➩' + i + '" type="hidden" /><input id="ID➩' + i + '" type="hidden" />',
                VBILLCODE: '<input readonly id="VBILLCODE➩' + i + '" class="editable" type="text" style="cursor:pointer" datacol="no" err="订单编号" checkexpession="NotNull" /><input id="PK_SALEORDER➩' + i + '" type="hidden" /><input id="CSALEORDERBID➩' + i + '" type="hidden" />',
                CUSNAME: '<input readonly id="CUSTNAME➩' + i + '" class="editable disabled" type="text" datacol="no" err="客户" checkexpession="NotNull" /><input id="CCUSTOMERID➩' + i + '" type="hidden" />',
                DBILLDATE: '<input id="DBILLDATE➩' + i + '" class="editable disabled center" type="text" />',
                MATERIALNAME: '<input readonly id="MATERIALNAME➩' + i + '" class="editable disabled " type="text" style="cursor:pointer" datacol="no" err="物料" checkexpession="NotNull" /><input id="CMATERIALVID➩' + i + '" type="hidden" /><input id="CMATERIALID➩' + i + '" type="hidden" />',
                NASTNUM: '<input id="NASTNUM➩' + i + '" class="editable disabled center" type="text" datacol="No" err="订单量" checkexpession="Double" value="0.00"/>',
                YLNUM: '<input id="YLNUM➩' + i + '" class="editable disabled center" type="text" datacol="No" err="余量" checkexpession="Double" value="0.00"/>',
                AMOUNT: '<input id="AMOUNT➩' + i + '" class="editable decimal center" type="text" onkeyup="Conversion(' + i + ')" datacol="No" err="预提数量" checkexpession="Double" value="0.00"/>',
                ORGNAME: '<input readonly id="ORGNAME➩' + i + '" class="editable disabled" type="text" style="cursor:pointer"  /><input id="PK_ORG➩' + i + '" type="hidden" />',
                DEPTNAME: '<input readonly id="DEPTNAME➩' + i + '" class="editable disabled" type="text" style="cursor:pointer" datacol="no" err="部门" checkexpession="NotNull" /><input id="PK_DEPT➩' + i + '" type="hidden" />' 
            }
            $('#gridTable').jqGrid('addRowData', i, rowdata);
        }
        //金额设置居中、设置只能输入金额格式
        $("#gridTable").find('.decimal').attr('onfocus', 'IsMoney(this.id)');
        $("#gridTable").find('.center').css('text-align', 'center')
        $("#gridTable").find('input').attr("disabled", "disabled");
        $("#gridTable tbody tr:eq(1)").find('input').removeAttr('disabled').attr("datacol", "yes");
        $("#gridTable").find('.disabled').attr("disabled", "disabled");
        $('.jqgrid-rownum').attr('title', '双击清空一行');
        $("#gridTable tbody tr").find('td:eq(0)').click(function () {
            var index = $(this).text();
            $("#CARS➩" + index).val("");
            $("#CARSNAME➩" + index).val("");
           $("#PK_SALEORDER➩" + index).val("");
           $("#CSALEORDERBID➩" + index).val("");
           $("#VBILLCODE➩" + index).val("");
           $("#CCUSTOMERID➩" + index).val("");
           $("#CUSTNAME➩" + index).val("");
           $("#CMATERIALID➩" + index).val("");
           $("#CMATERIALVID➩" + index).val("");
           $("#MATERIALNAME➩" + index).val("");

           $("#DBILLDATE➩" + index).val("");
           $("#PK_ORG➩" + index).val("");
           $("#ORGNAME➩" + index).val("");
           $("#PK_DEPT➩" + index).val("");
           $("#DEPTNAME➩" + index).val("");
           $("#NASTNUM➩" + index).val("");
           $("#YLNUM➩" + index).val("0.00");
           $("#AMOUNT➩" + index).val("0");
        });
        //点击物料编码文本框时间，弹出选择物料信息
//        $("#gridTable tbody tr").find('td:eq(1)').find('input').click(function () {
//            if ($(this).attr('disabled') == 'disabled') {
//                return false;
//            }
//            var index = $(this).attr('id').split('➩')[1];
//            var url = "/ExampleModule/HYBillSOF/SELECTTRAINS?index=" + index;
//            Dialog(url, "SELECTTRAINS", "选取车皮号信息（双击表格添加）", 900, 400);
//        });
        $("#gridTable tbody tr").find('td:eq(2)').find('input').click(function () {
            if ($(this).attr('disabled') == 'disabled') {
                return false;
            }
            var index = $(this).attr('id').split('➩')[1];
            var url = "/ExampleModule/HYBillSOF/SELECTSALEORDERS?index=" + index;
            Dialog(url, "SELECTSALEORDERS", "选取销售订单信息（双击表格添加）", 900, 400);
        });
        //价格信息文本框点击事件
        $("#gridTable").find('.decimal').click(function () {
            $(this).select();
        });
    }


    var array = new Array();
    function IsExistVBillCode(index, code) {
        if (!ArrayExists(array, code)) {
            array[index] = code;
            return false;
        } else {
            return true;
        }
    }

    function IsExistCars(index, code) {
        if (!ArrayExists(array, code)) {
            array[index] = code;
            return false;
        } else {
            return true;
        }
    }
    

    //订单明细换算+合计
    function Conversion(index) {
        var NASTNUM = $("#NASTNUM➩" + index).val();                                //订单数量
        var YLNUM = $("#YLNUM➩" + index).val();                            //余量
        var AMOUNT = $("#AMOUNT➩" + index).val();                //预提
  
        //统计合计
        var TotalNASTNUM = 0, TotalYLNUM = 0.00, TotalAMOUNT = 0.00;
        $("#gridTable tbody tr").each(function (i) {
            var NASTNUM = $(this).find('td:eq(6)').find('input').val();
            if (NASTNUM != "" && NASTNUM != undefined) {
                TotalNASTNUM += Number(NASTNUM);
            }
            var YLNUM = $(this).find('td:eq(7)').find('input').val();
            if (YLNUM != "" && YLNUM != undefined) {
                TotalYLNUM += Number(YLNUM);
            }
            var AMOUNT = $(this).find('td:eq(8)').find('input').val();
            if (AMOUNT != "" && AMOUNT != undefined) {
                TotalAMOUNT += Number(AMOUNT);
            }
        });
        $("#TotalNASTNUM").text(FormatCurrency(TotalNASTNUM));
        $("#TotalYLNUM").text(FormatCurrency(TotalYLNUM));
        $("#TotalAMOUNT").text(FormatCurrency(TotalAMOUNT));
        $("#NASTNUM").val(FormatCurrency(TotalNASTNUM));
        $("#YLNUM").val(FormatCurrency(TotalYLNUM));
    }
    /*明细end=======================================*/
</script>
<form id="form1">
<div class="leftline rightline" style="margin-left: 1px; margin-right: 1px;">
