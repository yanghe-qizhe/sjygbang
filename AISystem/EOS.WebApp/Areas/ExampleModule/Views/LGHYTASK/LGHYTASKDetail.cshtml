@{
    ViewBag.Title = "LGHYTASKDetail";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<script type="text/javascript">
    var KeyValue = GetQuery('KeyValue'); //主键
    $(function () {
        InitControl();
    })

    //得到一个对象实体
    function InitControl() {
        if (!!KeyValue) {
            AjaxJson("/ExampleModule/LGHYTASK/SetFormControl", { KeyValue: KeyValue }, function (data) {
                SetWebControls(data);
            });
        }
    }
   
</script>
<form id="form1" style="margin: 1px">
<div class="tools_bar" style="margin-top: 1px; margin-bottom: 1px;">
    <a id="lr-replace" class="tools_btn" title="刷新当前(Ctrl+Q)" onclick="Replace()"><span>
        <b style='background: url(@Url.Content("~/Content/Images/Icon16/arrow_refresh.png")) no-repeat 50% 4px;'>
            刷新</b></span></a> <a title="关闭当前窗口(Esc)" onclick="ThisCloseTab()" class="tools_btn">
                <span><b style="background: url(@Url.Content("~/Content/Images/Icon16/back.png")) 50% 4px no-repeat;">
                    离开</b></span></a>
</div>
<table class="form">
    <tr>
        <th class="formTitle">
            提货单号：
        </th>
        <td class="formValue">
            <input id="BL_NO" maxlength="50" type="text" class="txt" readonly="readonly" />
        </td>
  
        <th class="formTitle">
            生成时间：
        </th>
        <td class="formValue">
            <input id="CREATE_TIME" type="text" class="txt" readonly="readonly" />
        </td> 
    </tr>
    <tr>  
        <th class="formTitle">
            客户：
        </th>
        <td class="formValue">
            <input id="BUYER_NAME" maxlength="50" type="text" class="txt" readonly="readonly" />
        </td>
        <th class="formTitle">
            物料：
        </th>
        <td class="formValue">
            <input id="GOODS_CODENAME" maxlength="50" type="text" class="txt" readonly="readonly" />
        </td>
    </tr>
    <tr>  <th class="formTitle">
            规格：
        </th>
        <td class="formValue">
            <input id="ASSIST_CODENAME" maxlength="50" type="text" class="txt" readonly="readonly" value="0" />
        </td>
        <th class="formTitle">
           数量：
        </th>
        <td class="formValue">
            <input id="ITEM_QUANTITY" maxlength="50" type="text" class="txt" readonly="readonly" />
        </td>
      
    </tr>
    <tr>
        <th class="formTitle">
            件重：
        </th>
        <td class="formValue">
            <input id="ITEM_WEIGHT" maxlength="50" type="text" class="txt" readonly="readonly" />
        </td>
        <th class="formTitle">
            预提量：
        </th>
        <td class="formValue">
            <input id="ITEM_TOTAL_WEIGHT" maxlength="50" type="text" class="txt" readonly="readonly" />
        </td></tr>
        <tr>
        <th class="formTitle">
            车皮号：
        </th>
        <td class="formValue">
            <input id="TRAIN_NO" maxlength="50" type="text" class="txt" readonly="readonly" />
        </td>
        <th class="formTitle">
            仓库：
        </th>
        <td class="formValue">
            <input id="WAREHOUSE_NAME" maxlength="50" type="text" class="txt" readonly="readonly" />
        </td>
        </tr>
</table>
 
</form>
