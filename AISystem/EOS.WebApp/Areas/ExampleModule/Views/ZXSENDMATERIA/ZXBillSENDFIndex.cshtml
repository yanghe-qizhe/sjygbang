@{
    ViewBag.Title = "转序发货》列表";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<script type="text/javascript">
 var ModuleId = GetQuery('ModuleId'); //菜单主键
    $(function () {
        GetGrid();
    })
    //搜索
    function btn_Search() {
        var TaskNo = $("#BillNo").val();
        var TYPE = $("#TYPE").val();
        var StartTime = $("#StartTime").val();
        var EndTime = $("#EndTime").val();
        $("#gridTable").jqGrid('setGridParam', {
            url: "@Url.Content("~/ExampleModule/ZXSENDMATERIA/GetOrderList")?StartTime=" + StartTime + '&EndTime=' + EndTime + '&TaskNo=' + TaskNo + '&TYPE=' + TYPE, page: 1
        }).trigger('reloadGrid');
    }

    //加载表格
    function GetGrid() {
        var StartTime = $("#StartTime").val();
        var EndTime = $("#EndTime").val();
        $("#gridTable").jqGrid({
            url: "@Url.Content("~/ExampleModule/ZXSENDMATERIA/GetOrderList")?StartTime=" + StartTime + '&EndTime=' + EndTime,
            datatype: "json",
            height: $(window).height() - 150,
            autowidth: true,
            colModel: [ 
            { label: '单号', name: 'BILLNO', index: 'BILLNO', width: 150, align: 'left' },
            { label: 'ID', name: 'ID',hidden: true},
            { label: '车号', name: 'CARS', index: 'CARS', width: 80, align: 'center' },
           { label: '发货单位', name: 'DEF2', index: 'DEF2', width: 150, align: 'center' },
            //{ label: '收货单位', name: 'DEF4', index: 'DEF4', width: 150, align: 'center' },
            { label: '物料', name: 'MATERIAL', index: 'MATERIAL', width: 130, align: 'center' },
             { label: '物料规格', name: 'MATERIALSPEC', index: 'MATERIALSPEC', width:60, align: 'center' },
            {
                label: '业务状态', name: 'STATUS', index: 'STATUS', width: 60, align: 'center',
             formatter: function (cellvalue, options, rowObject) {
                    if (cellvalue == '0') 
                    return "<span style='color:red;'>已发货</span>";
                    if (cellvalue == '1')
                    return "<span style='color: blue; font-weight: bold;'>已收货</span>";
                } },
            { label: '发货数据来源', name: 'BILLFROM',index: 'BILLFROM', width: 80, align: 'center',
                    formatter: function (cellvalue, options, rowObject) {
                    if (cellvalue == '1') 
                    return "<span style='color:red;'>业务平台</span>";
                    if (cellvalue == '2')
                    return "<span style='color: blue; font-weight: bold;'>PDA设备</span>";
                }
             },
            { label: '发货PDA编号', name: 'PDANOSEND',index: 'PDANOSEND', width: 80, align: 'center'},
            { label: '发货仓库', name: "STORESEND", index: 'STORESEND', width: 150, align: 'center' },
             { label: '收货仓库', name: "STORETAKE", index: 'STORETAKE', width: 150, align: 'center' },
            { label: '发货人员', name: 'OPERUSERSEND', index: 'OPERUSERSEND', width:100, align: 'center' },
            {  label: '发货时间', name: 'OPERTIMESEND', index: 'OPERTIMESEND', width: 120, align: 'center',
                    formatter: function (cellvalue, options, rowObject) {
                        return formatDate(cellvalue, 'yyyy-MM-dd hh:mm');
                    }
                },
           
            //{ label: '收货人员', name: 'OPERUSERTAKE', index: 'OPERUSERTAKE', width:100, align: 'center' },
            //{  label: '收货时间', name: 'OPERTIMETAKE', index: 'OPERTIMETAKE', width: 120, align: 'center',
            //        formatter: function (cellvalue, options, rowObject) {
            //            return formatDate(cellvalue, 'yyyy-MM-dd hh:mm');
            //        }
            //    },
            { label: '毛重(吨)', name: 'GROSS', index: 'GROSS', width:60, align: 'center' },
            { label: '皮重(吨)', name: 'TARE', index: 'TARE', width:60, align: 'center' },
            { label: '净重(吨)', name: 'SUTTLE', index: 'SUTTLE', width:60, align: 'center' },
   
            { label: '备注', name: 'MEMO', index: 'MEMO', width:150, align: 'center' } 
            ],
            viewrecords: true,
            rowNum: 30,
            rowList: [30, 50, 100, 500, 1000],
            pager: "#gridPager",
            sortname: 'BILLNO',
            sortorder: 'desc',
            shrinkToFit: false,
            gridview: true,
            bSort:false,
            subGrid: false
        });
        
    }
    //新增
    function btn_add() {
        AddTabMenu("ZXBillSENDFForm", "@Url.Content("~/ExampleModule/ZXSENDMATERIA/ZXBillSENDFForm")?ModuleId="+ModuleId, "倒运发货确认", "page_white_add.png", true, true, true);
    }
    //编辑
    function btn_edit() {
        var KeyValue = GetJqGridRowValue("#gridTable", "ID");
        if (IsChecked(KeyValue)) {
                AddTabMenu("ZXBillSENDFEdit", "@Url.Content("~/ExampleModule/ZXSENDMATERIA/ZXBillSENDFForm")?KeyValue=" + KeyValue+"&ModuleId="+ModuleId, "编辑倒运发货", "page_white_edit.png", true, true, true);
        }
    }
    //删除
    function btn_delete() {
        var KeyValue = GetJqGridRowValue("#gridTable", "ID");
        if (IsDelData(KeyValue)) {
            var status = GetJqGridRowValue("#gridTable", "STATUS");
            if (status == "1") {
                tipDialog("已收货确认不能删除！", 3,"");
                return false;
            }
            var delparm = 'KeyValue=' + KeyValue;
            delConfig('/ExampleModule/ZXSENDMATERIA/DeleteOrder', delparm, KeyValue.split(",").length);
        }
    }
    //详细
    function btn_detail() {
        var KeyValue = GetJqGridRowValue("#gridTable", "ID");
        if (IsChecked(KeyValue)) {
            AddTabMenu("ZXBillSENDFDetail", "@Url.Content("~/ExampleModule/ZXSENDMATERIA/ZXBillSENDFDetail")?KeyValue=" + KeyValue, "转序发货详细", "page_white_edit.png", true, true, true);
        }
    }
   //查询
    function btn_query() {
        QueryDialog("/ExampleModule/ZXSENDMATERIA/ZXBillSENDFQuery", "ZXBillSENDFQuery", "查询过滤",350, 395, function (iframe) {
            top.frames[iframe].QueryClick(function (qurl) {
                $("#gridTable").jqGrid('setGridParam', {
                    url: "@Url.Content("~/ExampleModule/ZXSENDMATERIA/GetSeOrderList")?" + qurl + "&ModuleId=" + ModuleId, page: 1
                }).trigger('reloadGrid');
            });
        });
    }
    //刷新
    function windowload() {
        $("#gridTable").trigger("reloadGrid"); //重新载入  
    }
</script>
<div class="leftline rightline" style="margin-left: 1px; margin-right: 1px;">
    <div class="tools_bar" style="margin-top: 1px; margin-bottom: 0px;">
        <div class="PartialButton">
            @Html.Partial("_PartialButton")
        </div>
    </div>
    <div class="QueryArea">
        <table border="0" class="form-find" style="height: 45px;">
            <tr>
                <th>
                    单号/车号：
                </th>
                <td>
                    <input id="BillNo" type="text" class="txt" style="width: 120px" />
                </td>
                <th>
                    类型：
                </th>
                <td>
                    <select id="TYPE" class="txt select" style="width: 205px">
                        <option value="">---请选择---</option>
                        <option value="0">厂内</option>
                        <option value="1">厂际</option>
                    </select>
                </td>
                <th>
                    制单日期：
                </th>
                <td>
                    <input id="StartTime" type="text" class="txt Wdate" value="@EOS.Utilities.DateTimeHelper.GetToday()" style="width: 120px" onfocus="WdatePicker({onpicked:function(){EndTime.focus();},maxDate:'#F{$dp.$D(\'EndTime\')}'})" />
                </td>
                <td>
                    -
                </td>
                <td>
                    <input id="EndTime" type="text" class="txt Wdate" value="@EOS.Utilities.DateTimeHelper.GetToday()" style="width: 120px" onfocus="WdatePicker({minDate:'#F{$dp.$D(\'StartTime\')}'})" />
                </td>
                <td>
                    <input id="btnSearch" type="button" class="btnSearch" value="搜 索" onclick="btn_Search()" />
                </td>
            </tr>
        </table>
    </div>
    <div id="grid_List" class="topline">
        <table id="gridTable">
        </table>
        <div id="gridPager">
        </div>
    </div>
</div>
<style>
    .ui-widget-content
    {
        border-left: none;
    }
</style>
