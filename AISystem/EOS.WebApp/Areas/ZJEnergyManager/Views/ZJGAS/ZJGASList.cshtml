@{
    ViewBag.Title = "环境能源煤气管理";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<script type="text/javascript">
    var ModuleId = GetQuery('ModuleId'); //菜单主键 
    $(function () {    
        GetGrid();    
    })
     
    //搜索
    function btn_Search() {
        var StartTime = $("#StartTime").val();
        var EndTime = $("#EndTime").val();
        var BillNo = $("#NAME").val(); 
        var MATERIALNAME = $("#MATERIALNAME").val();   
        $("#gridTable").jqGrid('setGridParam', {
            url: "@Url.Content("~/ZJEnergyManager/ZJGAS/GetList")?StartTime=" + StartTime + '&EndTime=' + EndTime  + '&BILLNO=' + escape(BillNo)+ '&MATERIALNAME=' + escape(MATERIALNAME), page: 1
        }).trigger('reloadGrid');
    }
    //加载表格
    function GetGrid() {
        var StartTime = $("#StartTime").val();
        var EndTime = $("#EndTime").val(); 
        $("#gridTable").jqGrid({
            url: "@Url.Content("~/ZJEnergyManager/ZJGAS/GetList")?StartTime=" + StartTime + '&EndTime=' + EndTime,
            datatype: "json",
            height: $(window).height() - 150,
            autowidth:true,     
            colModel: [
                { label: 'ID', name: 'ID', index: 'ID', width: 180, align: 'left',align:'center',hidden:true }, 
                { label: '任务编号', name: 'BILLNO', index: 'BILLNO', width: 150, align: 'left',align:'center' }, 
                { label: '物料', name: 'MATERIALNAME', index: 'MATERIALNAME', width: 120, align: 'center'  },    
                { label: '日期', name: 'CYDATE', index: 'CYDATE', width: 100, align: 'center' },
                { label: '创建人', name: 'CREUSER', index: 'CREUSER', width: 80, align: 'center' },
                {
                    label: '创建日期', name: 'CRETIME', index: 'CRETIME', width: 110, align: 'center',
                    formatter: function (cellvalue, options, rowObject) {
                        return formatDate(cellvalue, 'yyyy-MM-dd hh:mm');
                    }
                },
                { label: '备注', name: 'MEMO', index: 'MEMO', width: 200, align: 'left' }
            ],
            viewrecords: true,
            rowNum: 30,
            rownumbers:true,
            rowList: [30, 50, 100, 500, 1000],
            pager: "#gridPager",
            sortname: 'CRETIME',
            sortorder: 'desc',
            shrinkToFit: false,
            gridview: true,
            subGrid: false 
        });
        
    }
     
    //新增
    function btn_add() { 
//        var url = "/ZJEnergyManager/ZJGAS/ZJGASForm?Type=0&FormID=@ViewBag.FormID";
//        Dialog(url, "ZJGASForm", "新增任务", 1000, 400);
        var url = "/ZJEnergyManager/ZJGAS/ZJGASFANOForm?Type=0&FormID=@ViewBag.FormID";
        Dialog(url, "ZJGASFANOForm", "新增任务", 1000, 400);
    }
     
    //编辑
    function btn_edit() { 
        var BILLNO = GetJqGridRowValue("#gridTable", "BILLNO");
        if (IsChecked(BILLNO)) {  
            AddTabMenu("ZJGASFormSave", "@Url.Content("~/ZJEnergyManager/ZJGAS/ZJGASFormSave")?ModuleId="+ModuleId+"&BILLNO="+escape(BILLNO), "录入分析结果", "page_white_add.png", true, true, true);
        }
    }
    //删除
    function btn_delete() {
        var KeyValue = GetJqGridRowValue("#gridTable", "ID");
        var BILLNO = GetJqGridRowValue("#gridTable", "BILLNO");
        if (IsDelData(KeyValue)) { 
            var delparm = 'KeyValue=' + KeyValue;
            delConfig('/ZJEnergyManager/ZJGAS/DeleteItem', delparm, KeyValue.split(",").length,BILLNO);
        }
    }
    function delConfig(url, parm, count,BILLNO) {
        if (count == undefined) {
            count = 1;
        }
        confirmDialog("提示", "注：您确定要删除【"+BILLNO+"】当前任务记录？", function (r) {
            if (r) {
                Loading(true, "正在删除数据...");
                window.setTimeout(function () {
                    AjaxJson(url, parm, function (data) {
                        tipDialog(data.Message, 3, data.Code);
                        if (data.Code > 0) {
                            windowload();
                        }
                    });
                }, 200);
            }
        });
    }
    
    function CallBackEvent(){
        btn_Search();
    }

    //刷新
    function windowload() {
        $("#gridTable").trigger("reloadGrid"); //重新载入
    }
</script>
<div class="leftline rightline" style="margin-left: 1px; margin-right: 1px;">
    <div class="tools_bar" style="margin-top: 1px; margin-bottom: 0px;">
        <div class="PartialButton">
            @Html.Partial("_PartialButton")
        </div>
    </div>
    <div class="QueryArea">
        <table border="0" class="form-find" style="height: 45px;">
            <tr>
                <th>
                    任务号：
                </th>
                <td>
                    <input id="NAME" type="text" class="txt" style="width: 100px" />
                </td>
                <th>
                    物料：
                </th>
                <td>
                    <input id="MATERIALNAME" type="text" class="txt" style="width: 100px" />
                </td>
                <th>
                    制单日期：
                </th>
                <td>
                    <input id="StartTime" type="text" class="txt Wdate" value="@EOS.Utilities.DateTimeHelper.GetDate(-7)" style="width: 120px" onfocus="var endDate=$dp.$('EndTime');WdatePicker({onpicked:function(){EndTime.focus();},maxDate:'#F{$dp.$D(\'EndTime\')}'})" />
                </td>
                <td>
                    -
                </td>
                <td>
                    <input id="EndTime" type="text" class="txt Wdate" value="@EOS.Utilities.DateTimeHelper.GetToday()" style="width: 120px" onfocus="WdatePicker({minDate:'#F{$dp.$D(\'StartTime\')}'})" />
                </td>
                <td>
                    <input id="btnSearch" type="button" class="btnSearch" value="搜 索" onclick="btn_Search()" />
                </td>
            </tr>
        </table>
    </div>
    <div id="grid_List" class="topline">
        <table id="gridTable">
        </table>
        <div id="gridPager">
        </div>
    </div>
</div>
<style>
    .ui-widget-content
    {
        border-left: none;
    }
</style>
