    //交样
    function Finish() {
        var JYUSER = $("#JYUSER").val();//交样人
        var SYUSER = $("#SYUSER").val();//接样人

        var JYUSER1 = $("#JYUSER1").val();//交样人
        var SYUSER1 = $("#SYUSER1").val();//接样人
        if (JYUSER == "" || JYUSER1 == "") {
            top.TipMsg("请您先选择交样人！", 4000, "error");
            return false;
        }
        if (SYUSER == "" || SYUSER1 == "") {
            top.TipMsg("请您先选择接样人！", 4000, "error");
            return false;
        }
        var type = GetJqGridRowValue("#gridTable", "TYPE");
        if (IsNull(type)) {
            var arrtype = type.split(",");
            var arr = $.grep(arrtype,
            function (n, i) {
                return n == "1"
            });
            if (arr.length == arrtype.length) {
                var KeyValue = GetJqGridRowValue("#gridTable", "ID");
                if (IsNull(KeyValue)) {
                    confirmDialog("提示", "注：您确定要对当前选中记录做交接样操作吗？", function (r) {
                        if (r) {
                            window.setTimeout(function () {
                                AjaxJson("/ZJManager/PCRawCY/PCRawCYFinish?KeyValue=" + escape(KeyValue) + "&JYUSER=" + escape(JYUSER) + "&SYUSER=" + escape(SYUSER) + "&JYUSER1=" + escape(JYUSER1) + "&SYUSER1=" + escape(SYUSER1), "", function (data) {
                                    top.frames[tabiframeId()].windowload();
                                    windowload();
                                });
                            }, 200);
                        }
                    });
                } else {
                    tipDialog('请至少选择一个采样单号', 4, 'warning');
                }
            } else {
                tipDialog("只有采样状态可以交接样,无法交接样!", 3, 0);
            }
        } else {
            tipDialog("请选择采样单", 3, 0);
        }
    }
    //搜索
    function btn_Search() {
        var StartTime = $("#StartTime").val();
        var EndTime = $("#EndTime").val();
