     //审批
        function btn_Check() {
         var AUDITSTATUS1 = GetJqGridRowValue("#gridTable", "AUDITSTATUS1");
    var arraudit1= AUDITSTATUS1.split(",");
    var arrstatus1=$.grep(arraudit1,
    function(n,i){
        return n!="1"
        }); 
     if(arrstatus1.length>0){
          tipDialog('当前批次中有未提交数据,无法做审批的操作！', 4, 'warning');
          return;
        } 

        var datas = [];
         var arr = new Array;
        var ids = $("#gridTable").getGridParam('selarrrow');
        $.each(ids, function (i, o) {
            var rowData = $("#gridTable").jqGrid("getRowData", ids[i]);
            datas.push(rowData);
        })

       if(datas.length==0){
            top.TipMsg("您没有选中任何项，请您选中后再操作！", 4000, "error");
            return false;
       }
     var title = "采购处置审批";
    var url = "/ZJManager/PCRawCheck/PCRawCheckForm2?ModuleId=" + ModuleId+"&PCRAWTYPE="+PCRAWTYPE  ;
     FullDialog(url,"PCRawCheckForm2",title);
     }
     
     //提交
        function btn_Submit() {
              var status = GetJqGridRowValue("#gridTable", "AUDITSTATUS");
    var arrstatus= status.split(",");
    var arr=$.grep(arrstatus,
         function(n,i){
            return n!="0"
        }); 
        if(arr.length>0){
         tipDialog('当前批次中有已审批数据,无法做提交的操作！', 4, 'warning');
         return false;
        } 
        var datas = [];
         var arr = new Array;
        var ids = $("#gridTable").getGridParam('selarrrow');
        $.each(ids, function (i, o) {
            var rowData = $("#gridTable").jqGrid("getRowData", ids[i]);
            datas.push(rowData);
        })
       if(datas.length==0){
        top.TipMsg("您没有选中任何项，请您选中后再操作！", 4000, "error");
            return false;
       }
     var title = "采购处置提交";
    var url = "/ZJManager/PCRawCheck/PCRawCheckFormHG2?ModuleId=" + ModuleId+"&PCRAWTYPE="+PCRAWTYPE  ;
     FullDialog(url,"PCRawCheckFormHG2",title);
     }

    //刷新
    function windowload() {
        $("#gridTable").trigger("reloadGrid"); //重新载入
  
    }
</script>
<div class="leftline rightline" style="margin-left: 1px; margin-right: 1px;">
