        //公告查看明细
        function PreviewNews(KeyValue) {
            if (IsChecked(KeyValue)) {
                var url = "/BaseSet/News/NewsDetail?KeyValue=" + KeyValue;
                openCancelDialog(url, "NewsDetail", "公告信息", 650, 380);
            }
        }
        //获取公告
        function GetNews() {
            //明细信息
            AjaxJson("/BaseSet/News/GetEntryList", "", function (data) {
                var JsonData = data.rows;
                var index = 1;
                $("#add_News div").remove();
                $.each(JsonData, function (i) {
                    var rowData = JsonData[i];
                    var div = "";
                    if (rowData.TYPE == "4") {
                        div = "<div style=\"padding-left: 5px; cursor: pointer; line-height: 25px; background-color: #eee;color: #e66d15\" title=\"" + rowData.CONTENT + "\" onclick=\"PreviewNews('" + rowData.ID + "');\">";
                        div += index + "、" + rowData.TITLE;
                        div += "<img src=\"/Content/Images/hot.gif\" style=\"padding-bottom: 3px; vertical-align: middle;margin-left: 10px;\" />";
                        div += "<div style=\"float: right\">" + rowData.CREATEDATE + "</div>";
                        div += "</div>";
                    } else {
                        div = "<div style=\"padding-left: 5px; cursor: pointer; line-height: 25px;\"  title=\"" + rowData.CONTENT + "\">";
                        div += index + "、" + rowData.TITLE;
                        div += "<div style=\"float: right\">" + rowData.CREATEDATE + "</div>";
                        div += "</div>";
                    }
                    $(div).appendTo("#add_News");
                    index++;
                });
            });
        }

