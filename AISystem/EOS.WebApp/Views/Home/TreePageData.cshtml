        //车辆预警
        function Speedometer() {
            $('#containerB').highcharts({
                chart: {
                    type: 'gauge',
                    plotBackgroundColor: null,
                    plotBackgroundImage: null,
                    plotBorderWidth: 0,
                    plotShadow: false
                },
                title: {
                    text: '车辆预警'
                },
                pane: {
                    startAngle: -150,
                    endAngle: 150,
                    background: [{
                        backgroundColor: {
                            linearGradient: { x1: 0, y1: 0, x2: 0, y2: 1 },
                            stops: [
                                [0, '#FFF'],
                                [1, '#333']
                            ]
                        },
                        borderWidth: 0,
                        outerRadius: '109%'
                    }, {
                        backgroundColor: {
                            linearGradient: { x1: 0, y1: 0, x2: 0, y2: 1 },
                            stops: [
                                [0, '#333'],
                                [1, '#FFF']
                            ]
                        },
                        borderWidth: 1,
                        outerRadius: '107%'
                    }, {
                        // default background
                    }, {
                        backgroundColor: '#DDD',
                        borderWidth: 0,
                        outerRadius: '105%',
                        innerRadius: '103%'
                    }]
                },
                // the value axis
                yAxis: {
                    min: 0,
                    max: 500,

                    minorTickInterval: 'auto',
                    minorTickWidth: 1,
                    minorTickLength: 10,
                    minorTickPosition: 'inside',
                    minorTickColor: '#666',

                    tickPixelInterval: 30,
                    tickWidth: 2,
                    tickPosition: 'inside',
                    tickLength: 10,
                    tickColor: '#666',
                    labels: {
                        step: 2,
                        rotation: 'auto'
                    },
                    title: {
                        text: '辆/当前'
                    },
                    plotBands: [{
                        from: 0,
                        to: 150,
                        color: '#55BF3B' // green
                    }, {
                        from: 150,
                        to: 300,
                        color: '#DDDF0D' // yellow
                    }, {
                        from: 300,
                        to: 500,
                        color: '#DF5353' // red
                    }]
                },
                series: [{
                    name: '车',
                    data: [500],
                    tooltip: {
                        valueSuffix: ' 辆/当前'
                    }
                }],
                exporting: {
                    enabled: false
                }
            }, function (chart) {
                if (!chart.renderer.forExport) {
                    var point = chart.series[0].points[0];
                    AjaxJson("/WeightManager/WeightOut/GetCarsWarning", "", function (data) {
                        var JsonData = data.rows;
                        var rowData = JsonData[0];
                        var newVal = parseInt(rowData.NOUTCARSNUM);
                        point.update(newVal);
                    });
                    setInterval(function () {
                        var point = chart.series[0].points[0];
                        AjaxJson("/WeightManager/WeightOut/GetCarsWarning", "", function (data) {
                            var JsonData = data.rows;
                            var rowData = JsonData[0];
                            var newVal = parseInt(rowData.NOUTCARSNUM);
                            point.update(newVal);
                        });
                    }, 1200000);
                }
            });
        }
        function NewTabchange(e) {
            $(e).parent().find('div').removeClass("actived");
            $(e).addClass("actived");
            var id = e.id;
            if (id == "tb_JDay") {
                $("#JDayInWeight").show();
                $("#JDayOutWeight").show();
                $("#ZDayInWeight").hide();
                $("#ZDayOutWeight").hide();
            } else {
                $("#JDayInWeight").hide();
                $("#JDayOutWeight").hide();
                $("#ZDayInWeight").show();
                $("#ZDayOutWeight").show();
            }
        }
